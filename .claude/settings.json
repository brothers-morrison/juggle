{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true,
    "excludedCommands": [],
    "network": {
      "allowLocalBinding": true
    },
    "filesystem": {
      "write": {
        "additionalAllow": ["~/.cache/nix"]
      }
    }
  },
  "permissions": {
    "allow": [
      "Bash(go:*)",
      "Bash(gofmt:*)",
      "Bash(staticcheck:*)",
      "Bash(devbox:*)",
      "Bash(jj log:*)",
      "Bash(jj diff:*)",
      "Bash(jj status:*)",
      "Bash(jj show:*)",
      "Bash(jj --version)",
      "Bash(juggle:*)",
      "Bash(./juggle:*)",
      "Bash(jj commit:*)",
      "Bash(jj bookmark:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:proxy.golang.org)",
      "WebFetch(domain:sum.golang.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.claude.com)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "ask": [
      "Bash(jj git push:*)",
      "Bash(git push:*)"
    ]
  }
}
