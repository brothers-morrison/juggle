{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "juggle loop hook-event post-tool"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "juggle loop hook-event tool-failure"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "juggle loop hook-event session-end"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "juggle loop hook-event stop"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(go:*)",
      "Bash(gofmt:*)",
      "Bash(staticcheck:*)",
      "Bash(devbox:*)",
      "Bash(jj log:*)",
      "Bash(jj diff:*)",
      "Bash(jj status:*)",
      "Bash(jj show:*)",
      "Bash(jj --version)",
      "Bash(juggle:*)",
      "Bash(./juggle:*)",
      "Bash(jj commit:*)",
      "Bash(git commit:*)",
      "WebFetch(domain:proxy.golang.org)",
      "WebFetch(domain:sum.golang.org)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:docs.claude.com)",
      "Bash(./scripts/*:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ],
    "ask": [
      "Bash(jj git push:*)",
      "Bash(git push:*)"
    ]
  },
  "sandbox": {
    "allowUnsandboxedCommands": true,
    "autoAllowBashIfSandboxed": true,
    "enabled": true,
    "excludedCommands": [],
    "filesystem": {
      "write": {
        "additionalAllow": [
          "~/.cache",
          "~/go"
        ]
      }
    },
    "network": {
      "allowLocalBinding": true
    }
  }
}
